<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/appDark"
  tools:context=".MainActivity">

  <TextView
    android:layout_marginTop="80dp"
    android:textColor="@android:color/white"
    android:textAlignment="center"
    android:text="ABLE GOD BELIEVERS RADIO"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <LinearLayout
    android:paddingLeft="100dp"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:elevation="3dp"
      android:layout_marginRight="30dp"
      android:background="@drawable/round_template"
      android:id="@+id/playButton"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:text="Channel 1"
      tools:layout_editor_absoluteX="111dp"
      tools:layout_editor_absoluteY="195dp" />
  <Button
    android:elevation="3dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/round_template"
    android:id="@+id/stopButton"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:text="Channel 2"
    tools:layout_editor_absoluteX="111dp"
    tools:layout_editor_absoluteY="305dp" /><Button
    android:elevation="3dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/round_template"
    android:id="@+id/channel3"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:text="Channel 3"
    tools:layout_editor_absoluteX="111dp"
    tools:layout_editor_absoluteY="305dp" />

  </LinearLayout>
    </RelativeLayout>
  </HorizontalScrollView>
</RelativeLayout>